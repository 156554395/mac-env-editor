{
  "name": "mac-env-editor",
  "version": "1.1.1",
  "description": "一个现代化、直观的 macOS 环境变量和别名管理工具",
  "main": "dist/main.js",
  "homepage": "https://github.com/156554395/mac-env-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/156554395/mac-env-editor.git"
  },
  "bugs": {
    "url": "https://github.com/156554395/mac-env-editor/issues"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:main\" \"pnpm run dev:renderer\"",
    "dev:main": "tsc src/main/*.ts --outDir dist --target es2020 --module commonjs --moduleResolution node && NODE_ENV=development electron dist/main.js",
    "dev:renderer": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:main": "tsc src/main/*.ts --outDir dist --target es2020 --module commonjs --moduleResolution node",
    "build:renderer": "vue-tsc && vite build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "electron",
    "vue3",
    "typescript",
    "macos",
    "environment-variables",
    "shell-aliases",
    "config-editor",
    "zsh",
    "bash",
    "dotfiles",
    "developer-tools"
  ],
  "author": "Mac Environment Variable Editor Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "concurrently": "^9.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.4.0",
    "vite": "^7.1.6",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.0.0"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.7.0"
  }
}
