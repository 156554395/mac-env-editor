{
  "appId": "com.wangxiaobao.mac-env-editor",
  "productName": "Env Editor",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/main.js",
    "dist/preload.js",
    "dist/renderer/**/*",
    "build/Icon.icns",
    "src/assets/icon.png",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "build/Icon.icns",
      "to": "Icon.icns"
    },
    {
      "from": "src/assets/icon.png",
      "to": "icon.png"
    }
  ],
  "mac": {
    "target": "dmg",
    "category": "public.app-category.utilities",
    "icon": "build/Icon.icns",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "notarize": false
  },
  "dmg": {
    "title": "Mac Env Editor ${version}",
    "icon": "build/Icon.icns",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  }
}
